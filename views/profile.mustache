{{>template/head}}

    <form action="/home" method="get">
        <fieldset class="form-section">
            <label for="username">Username</label>
            <p>{{user}}{{^user}}user{{/user}}</p>
        </fieldset>
        <fieldset class="form-section">
            <label for="email">Email address</label>
            <input id="email" name="email" type="text" placeholder="coolguy_92@gmail.com" value="{{email}}" required>
        </fieldset>
        <fieldset class="form-section">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" minlength="8" required>
        </fieldset>
        <fieldset class="form-section">
            <label for="password-confirm">Confirm password</label>
            <input id="password-confirm" name="password-confirm" type="password" required>
        </fieldset>
        <fieldset class="form-section flex-container centre">
            <input type="submit" value="Update details" class="centre">
        </fieldset>
    </form>
{{>template/foot}}
